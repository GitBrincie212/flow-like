{
	"name": "flow-like-api",
	"private": true,
	"version": "0.0.2",
	"type": "module",
	"scripts": {
		"postinstall": "cargo install sea-orm-cli@1.1.15",
		"db:push:sync": "bun run db:push && bun run db:sync",
		"db:sync": "sea-orm-cli generate entity -o src/entity --max-connections 10 --with-serde both",
		"db:push": "bunx prisma db push --schema prisma/schema",
		"db:migration:create": "bunx prisma migrate dev --name",
		"db:migration:deploy": "bunx prisma migrate deploy",
		"db:view": "bunx drizzle-kit studio"
	},
	"devDependencies": {
		"@types/node": "^22.10.10",
		"dotenv": "^17.2.2",
		"drizzle-kit": "^0.31.4",
		"drizzle-orm": "^0.44.5",
		"pg": "^8.16.3",
		"prisma": "^6.8.2",
		"tsx": "^4.19.2",
		"typescript": "^5.7.3"
	},
	"dependencies": {
		"@prisma/client": "^6.8.2"
	}
}
