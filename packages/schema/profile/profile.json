{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Profile",
	"type": "object",
	"required": ["bits", "created", "name", "updated"],
	"properties": {
		"id": {
			"default": "y9appkth470fl5o0avewa00n",
			"type": "string"
		},
		"name": {
			"type": "string"
		},
		"description": {
			"type": ["string", "null"]
		},
		"icon": {
			"default": null,
			"type": ["string", "null"]
		},
		"thumbnail": {
			"type": ["string", "null"]
		},
		"interests": {
			"default": [],
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"tags": {
			"default": [],
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"hub": {
			"default": "",
			"type": "string"
		},
		"hubs": {
			"default": [],
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"apps": {
			"default": null,
			"type": ["array", "null"],
			"items": {
				"$ref": "#/definitions/ProfileApp"
			}
		},
		"theme": {
			"default": null
		},
		"bits": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"settings": {
			"default": {
				"connection_mode": "simplebezier"
			},
			"allOf": [
				{
					"$ref": "#/definitions/Settings"
				}
			]
		},
		"updated": {
			"type": "string"
		},
		"created": {
			"type": "string"
		}
	},
	"definitions": {
		"ProfileApp": {
			"type": "object",
			"required": ["app_id", "favorite", "pinned"],
			"properties": {
				"app_id": {
					"type": "string"
				},
				"favorite": {
					"type": "boolean"
				},
				"favorite_order": {
					"type": ["integer", "null"],
					"format": "int32"
				},
				"pinned": {
					"type": "boolean"
				},
				"pinned_order": {
					"type": ["integer", "null"],
					"format": "int32"
				}
			}
		},
		"Settings": {
			"type": "object",
			"required": ["connection_mode"],
			"properties": {
				"connection_mode": {
					"$ref": "#/definitions/ConnectionMode"
				}
			}
		},
		"ConnectionMode": {
			"type": "string",
			"enum": ["default", "straight", "step", "smoothstep", "simplebezier"]
		}
	}
}
